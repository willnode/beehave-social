<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:descendantFocusability="blocksDescendants"
    android:padding="16dp"
    android:background="@color/white">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sosmed_image_content"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/image_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        tools:src="@color/light_orange" />


    <ToggleButton
        android:id="@+id/tb_favorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/favorite_toggle"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="@+id/sosmed_image_content"
        app:layout_constraintEnd_toStartOf="@+id/ib_comment"
        app:layout_constraintStart_toStartOf="@+id/sosmed_image_content"
        app:layout_constraintTop_toTopOf="@+id/sosmed_image_content"
        app:layout_constraintVertical_bias="0.944" />

    <ImageButton
        android:id="@+id/ib_comment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_comment"
        app:layout_constraintBottom_toBottomOf="@+id/tb_favorite"
        app:layout_constraintEnd_toStartOf="@+id/ib_share"
        app:layout_constraintTop_toTopOf="@+id/tb_favorite"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/ib_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/ic_share"
        app:layout_constraintEnd_toEndOf="@+id/sosmed_image_content"
        app:layout_constraintTop_toTopOf="@+id/ib_comment" />

    <TextView
        android:id="@+id/sosmed_text_content_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sosmed_image_content"
        tools:text="@string/content_title" />

    <TextView
        android:id="@+id/sosmed_text_content_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sosmed_text_content_title"
        tools:text="@string/content_category" />


    <TextView
        android:id="@+id/sosmed_text_content_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sosmed_text_content_category"
        tools:text="@string/description" />

</androidx.constraintlayout.widget.ConstraintLayout>